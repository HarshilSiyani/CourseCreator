<div class = "d-flex justify-content-between align-items-center mx-3 my-5">
  <div>
    <h2 class="m-2">Your currently enrolled courses</h2>
  </div>
</div>
<div class = "d-flex flex-wrap">
<% @enrollments.each do |enrollment| %>
  <div class="card bg-light mb-3 m-5" style="max-width: 18rem;min-width: 18rem;">
  <div class="card-header"><h3><b><%= enrollment.course.name %></b></h3></div>
  <div class="card-body">
    <h5 class="card-title"><%= enrollment.course.category %></h5>
    <p class="card-text desc"><%= enrollment.course.description %></p>
  </div>
  <%= link_to "Study", study_course_path(enrollment.course, study_module_id: enrollment.course.first_module), class: "btn btn-primary" %>
</div>
<% end %>
</div>
