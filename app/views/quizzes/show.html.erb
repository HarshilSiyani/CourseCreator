<h1><%= @quiz.study_module.course.name %></h1>
<h2><%= @quiz.study_module.name %></h2>

<div class="card preview">
<ol>
<% @quiz.questions.each do |question| %>
  <li><%= question.text %></li>
  <% if question.answers %>
    <ul class="fa-ul">
    <% question.answers.each do |answer| %>
      <li>
        <% if answer.correct %>
          <i class="fa-li fa fa-check-square"></i>
        <% else %>
          <i class="fa-li fa fa-square"></i>
        <% end %>
        <%= answer.text %>
      </li>
    <% end %>
    </ul>
  <% end %>
<% end %>
</ol>
</div>

<%= link_to "< Back", :back, class: "mt-3 btn btn-info" %>
