<div class = "d-flex justify-content-between align-items-center mx-3 my-5">
  <div>
    <h2 class="m-2">Your courses</h2>
  </div>
  <div>
    <%= link_to "Add Course", new_course_path, class: "btn btn-outline-secondary ml-5" %>
  </div>
</div>
<div class = "d-flex flex-wrap">
<% @courses.each do |course| %>
  <div class="card bg-light mb-3 m-5" style="max-width: 18rem;min-width: 18rem;">
  <div class="card-header name-desc"><h4><b><%= course.name %></b></h4></div>
  <div class="card-body">
    <h5 class="card-title"><%= course.category %></h5>
    <p class="card-text desc"><%= course.description %></p>
  </div>
  <%= link_to "View", course_path(course), class: "btn btn-outline-primary" %>
</div>
<% end %>
</div>
